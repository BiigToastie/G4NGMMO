{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "noEmit": false,
    "sourceMap": true,
    "types": [
      "node",
      "express",
      "dotenv"
    ]
  },
  "include": [
    "src/server/**/*",
    "src/models/**/*"
  ],
  "exclude": [
    "src/client/**/*",
    "node_modules",
    "dist"
  ]
} 